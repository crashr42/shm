<h3>Пожалуйста укажите верные личные данные</h3>
<%= simple_form_for @bid, :url => {:controller => :bid, :action => :create}, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
    <%= f.input :first_name, :placeholder => 'enter first name', :label => 'Имя' %>
    <%= f.input :last_name,  :placeholder => 'enter last name', :label => 'Фамилия' %>
    <%= f.input :third_name, :placeholder => 'enter third name', :label => 'Отчество' %>
    <%= f.input :email,      :placeholder => 'enter email address', :label => 'Email' %>
    <%= f.input :address,    :placeholder => 'enter address', :label => 'Адрес' %>
    <%= f.input :policy,     :placeholder => 'enter policy', :label => 'Номер страхового полиса' %>
    <%= f.input :passport_scan, :as => :file, :label => 'Скан паспорта' %>
    <div class="form-actions">
      <%= f.button :submit, 'Отправить заявку', :class => 'btn-success' %>
      <%= link_to 'Назад', :back, :class => 'btn' %>
    </div>
<% end %>