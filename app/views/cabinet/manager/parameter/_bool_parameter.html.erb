<%= form_for [:cabinet, :manager, p], :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :type, :value => 'StringParameter' %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'parameter name' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :default, :class => 'control-label' %>
      <div class="controls">
        <%= f.check_box :default %>
      </div>
    </div>
<% end %>