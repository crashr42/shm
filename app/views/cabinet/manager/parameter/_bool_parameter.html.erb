<%= form_for p, :as => :parameter, :url => url_for(:controller => :parameter, :action => :create), :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :type, :value => 'BoolParameter' %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'parameter name' %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Default</label>

      <div class="controls">
        <%= check_box_tag 'parameter[metadata][default]', 'true', p.metadata['default'] == 'false' %>
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn">Create</button>
    </div>
<% end %>