<h3>Create new parameter</h3>
<% [:string, :integer, :select, :bool].each do |p| %>
    <button class="btn show-parameter-dialog" type="btn" data-type="<%= p %>"><%= p.capitalize %></button>

    <div class="modal hide fade" id="modal-<%= p %>">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h3><%= p.capitalize %></h3>
      </div>
      <div class="modal-body">
        <%= render :partial => "#{p}_parameter", :locals => {:p => @parameter} %>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn" data-dismiss="modal">Close</a>
        <a href="#" class="btn btn-primary">Save changes</a>
      </div>
    </div>
<% end %>
