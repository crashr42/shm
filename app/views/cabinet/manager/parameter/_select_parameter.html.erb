<%= form_for p, :as => :parameter, :url => url_for(:controller => :parameter, :action => :create), :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.hidden_field :type, :value => 'SelectParameter' %>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :placeholder => 'parameter name' %>
      </div>
    </div>
    <div class="control-group">
      <label class="control-label">Values</label>

      <div class="controls">
        <div class="input-append">
          <input id="select-p-new-value" type="text" placeholder="enter new value">
          <button type="button" class="btn" id="select-p-add-new-value-button">Add</button>
        </div>
      </div>
    </div>
    <div class="control-group">
      <div id="select-p-values-box"></div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn">Create</button>
    </div>
<% end %>