<% if flash[:notice] %>
  <span class="label label-success"><%= flash[:notice] %></span>
<% end %>
<% if flash[:error] %>
  <span class="label label-important"><%= flash[:error] %></span>
<% end %>


<h3>Выберите прием:</h3>
<table class="table table-striped">
 <tr>
  <th>Дата</th>
  <th>Пациент</th>
  <th>Описание</th>
 </tr>

 <% @events.each do |event| %>
<% unless event.blank? %>
   <tr>
     <td><%= link_to(event.date_start.to_s + "\n" + event.time_start.strftime("%H:%M") + '-' + event.time_end.strftime("%H:%M"), "new-for-event/#{event.id}") %></td>
     <td><%= User.find_by_id(event.user_id).email %></td>
     <td><%= event.description %></td>
   </tr>
<% end %>
<% end %>
</table>
