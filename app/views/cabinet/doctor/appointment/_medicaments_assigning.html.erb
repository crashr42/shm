<%= form_tag('/cabinet/doctor/medicament/confirm', :method => 'post', class: 'form-horizontal', id: 'diagnoses-form' ) do %>
    <legend>
      Здесь вы можете назначить медикаменты, которые принимает пациент
    </legend>

    <input type="hidden" value="<%= @a.patient_user.first.id %>" name="patient_id">
    <div id="existing-medicaments">
      <% @a.patient_user.first.medicaments.each do |medicament| %>
          <p><input type="checkbox" checked="checked"  name="item[]" value="<%= medicament.id %>" /><%= medicament.commercial_name %></p>
      <% end %>
    </div>

    <div class="form-actions">
      <a class="btn send">Save</a>
    </div>

<% end %>

<%= form_tag('/cabinet/doctor/medicament/find', :method => 'post', class: 'form-search-large', id: 'medicament-search' ) do %>
    <input type="text" id="medicament-name" name="name" placeholder="Enter medicament name">
    <a class="btn btn-primary start-search">Start searching</a>
<% end %>

<div id="medicaments-list">
</div>
