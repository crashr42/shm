<h3>Мои приемы</h3>

<h3>Выберите прием:</h3>
<table class="table table-striped">
  <tr>
    <th>Дата<br/>
      <small>(Click to show)</small>
    </th>
    <th>Пациент<br/>
      <small>(Click to appointment)</small>
    </th>
    <th>Описание</th>
  </tr>

  <% @appointments.each do |event| %>
      <% unless event.blank? %>
          <tr>
            <td>
              <%= event.date_start.strftime("%d %m %yг. ") %>
              <br/>
              <%= link_to(event.date_start.strftime("%H:%M") + '-' + event.date_end.strftime("%H:%M"),
                          cabinet_doctor_appointment_path(event.id)) %>
            </td>
            <td><%= link_to(get_patient_by_event(event), new_cabinet_doctor_document_path(event_id: event.id)) %></td>
            <td><%= event.description %></td>
          </tr>
      <% end %>
  <% end %>
</table>
