<h3><%= @storage.parameter.name %></h3>
<%= simple_form_for @storage, :url => cabinet_patient_parameter_path, :method => :put, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :parameter_id, :as => :hidden, :input_html => { :value => params[:id] } %>
    <%= f.input :value, :placeholder => 'enter value' %>
    <div class="form-actions">
      <%= f.submit 'Enter', :class => 'btn' %>
    </div>
<% end %>