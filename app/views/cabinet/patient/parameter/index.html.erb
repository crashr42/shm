<div class="container">
    <h3>Assigned parameters</h3>
    <ul class="unstyled">
      <% @parameters.each do |p| %>
          <li class="parameter">
              <h3><%= p.name %></h3>
              <div>
                  <%= simple_form_for :storage, :url => cabinet_patient_parameter_index_path, :html => {:class => 'form-horizontal'} do |f| %>
                      <%= f.input :parameter_id, :as => :hidden, :input_html => {:value => p.id} %>
                      <%= render :partial => p.class.name.underscore, :locals => {:f => f, :p => p} %>
                      <%= f.submit 'Enter', :class => 'btn' %>
                  <% end %>
              </div>
          </li>
      <% end %>
    </ul>
</div>