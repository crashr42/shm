source 'https://rubygems.org'

group :assets do
  # компилятор sass
  gem 'sass-rails',   '~> 3.2.3'
  # компилятор coffee-script
  gem 'coffee-rails', '~> 3.2.1'
  # компрессор
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  # посмпроение диаграммы классов для моделей
  gem 'rails-erd'
  # почтовый сервер
  gem 'mailcatcher'
end

group :test do
  # сам rspec
  gem 'rspec-rails'
  # автоматический запуск тестов
  gem 'autotest-rails'
  # фабрика, моки, стабы
  gem 'factory_girl'
  # ускоритель тестов
  gem 'spork'
  # оповещение о результатах тестов
  gem 'test_notifier'
end

# фэйковые данные
gem 'faker'
# сами рельсы
gem 'rails', '3.2.6'
# подключение к postgresql
gem 'pg'
# jquery
gem 'jquery-rails'
# отличная админка
gem 'rails_admin'
# авторзация
gem 'devise'
# веб-сервер
gem 'thin'
# среда для исполнения js
gem 'execjs'
# v8
gem 'therubyracer'
# twitter bootstrap
gem 'twitter-bootstrap-rails'
# определение связей в миграциях
gem 'foreigner'
# контроль прав доступа
gem 'cancan'
# стандарт icalendar
gem 'icalendar'
# генерация уникальных идентификаторов
gem 'uuidtools'
# js шаблонизатор
gem 'eco'
# jquery plugin календарь
gem 'fullcalendar-rails'
# переброс переменных из контроллеров в js
gem 'gon'
# загрузка файлов
gem 'carrierwave'
# расширение для работы с формами
gem 'simple_form'
# автоматическая валидация на стороне клиента
gem 'client_side_validations'
# coffee-script во вьюхах
gem 'coffeebeans'
# валидация временных промежутков
gem 'validates_timeliness', '~> 3.0'
# работа с датами в js
gem 'momentjs-rails'
# backbone.js
gem 'rails-backbone'