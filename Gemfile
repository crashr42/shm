source 'https://rubygems.org'

group :assets do
  # компилятор sass
  gem 'sass-rails'
  # компилятор coffee-script
  gem 'coffee-rails'
  # компрессор
  gem 'uglifier'
  # компилятор less
  gem 'less-rails'
end

group :development do
  # удобный вывод ошибок
  gem 'better_errors'
  # построение диаграммы классов для моделей
  gem 'rails-erd'
  # почтовый сервер
  gem 'mailcatcher'
  # rails panel
  gem 'meta_request'
end

group :test do
  # ZenTest (bug in gemspec http://stackoverflow.com/questions/14488605/cant-install-zentest-4-8-4)
  gem 'ZenTest', '4.8.3'
  # сам rspec
  gem 'rspec-rails'
  # автоматический запуск тестов
  gem 'autotest-rails'
  # фабрика, моки, стабы
  gem 'factory_girl'
  # ускоритель тестов
  gem 'spork'
  # оповещение о результатах тестов
  gem 'test_notifier'
end

# фэйковые данные
gem 'faker'
# сами рельсы
gem 'rails'
# подключение к postgresql
gem 'pg'
# jquery
gem 'jquery-rails'
# отличная админка
gem 'rails_admin'
# авторзация
gem 'devise'
# веб-сервер
gem 'thin'
# среда для исполнения js
gem 'execjs'
# v8
gem 'libv8'
# mapping v8 to ruby
gem 'therubyracer'
# twitter bootstrap
gem 'twitter-bootstrap-rails'
# определение связей в миграциях
gem 'foreigner'
# контроль прав доступа
gem 'cancan'
# генерация уникальных идентификаторов
gem 'uuidtools'
# jquery plugin календарь
gem 'fullcalendar-rails'
# переброс переменных из контроллеров в js
gem 'gon'
# загрузка файлов
gem 'carrierwave'
# расширение для работы с формами
gem 'simple_form'
# coffee-script во вьюхах
gem 'coffeebeans'
# валидация временных промежутков
gem 'validates_timeliness'
# работа с датами в js
gem 'momentjs-rails'
# backbone.js
gem 'rails-backbone'
# модульная структура для js
gem 'requirejs-rails'
# графики
gem 'highcharts-rails'
